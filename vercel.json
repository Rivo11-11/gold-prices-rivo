{
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/api/update-metal.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/cron/update-metal",
      "dest": "src/api/update-metal.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/app.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-metal",
      "schedule": "*/20 * * * *"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps"
}